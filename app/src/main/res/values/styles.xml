<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>-->
<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>-->
    <style name="ActivityTransitions" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_up</item>
        <item name="android:activityOpenExitAnimation">@anim/idle</item>
        <item name="android:activityCloseEnterAnimation">@anim/idle</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="Profile">
    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:paddingTop">@dimen/spacingTiny_4</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Profile.EditText.Single" parent="Profile.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile.EditText.MultiLine" parent="Profile.EditText">
        <item name="android:maxLength">128</item>
    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Header.NickName" parent="Profile.Header">
        <item name="android:textSize">@dimen/fontLarge_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">@dimen/spacingNormal_16</item>
    </style>

    <style name="Profile.Header.Rank" parent="Profile.Header">
        <item name="android:textSize">@dimen/fontNormal_16</item>
    </style>

    <style name="Profile.Metrics" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Metrics.Label" parent="Profile.Metrics">
        <item name="android:textSize">@dimen/fontNormal_16</item>
    </style>

    <style name="Profile.Metrics.Value" parent="Profile.Metrics">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/fontLarge_20</item>
    </style>

    <style name="Profile.InfoItem">
        <item name="android:paddingTop">@dimen/spacingNormal_16</item>
        <item name="android:paddingLeft">@dimen/spacingNormal_16</item>
        <item name="android:paddingRight">@dimen/spacingNormal_16</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:minHeight">72dp</item>
    </style>
</resources>
